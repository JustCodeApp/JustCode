
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <!-- Bootstrap y Jquery -->
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />

        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        
            <!-- Social Font Codes -->
        <link href="{{ asset('css/socialIconsFont/creativeverse_social-codes.css')}}" rel="stylesheet" />
        <link rel="stylesheet" href="{{ asset('css/socialIconsFont/creativeverse_social-embedded.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/socialIconsFont/creativeverse_social-ie7.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/socialIconsFont/creativeverse_social-ie7-codes.css') }}" />
    
        
        <link href="{{ asset('css/circle.css') }}" rel="stylesheet" type="text/css" />
        
        <!-- Otros importes -->
        {% if (app.request.get('_route') != 'just_codeactividades_homepage' and app.request.get('_route') != 'fos_user_registration_register') %}
            <link rel="stylesheet" href="{{ asset('css/menu.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/actividades.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/footer.css') }}" />
            <script src="{{ asset('js/menu.js') }}"></script>

        {% endif %}

        {% if (app.request.get('_route') == 'just_codeactividades_homepage' or app.request.get('_route') == 'fos_user_registration_register') %}

            <link href="{{ asset('css/index.css') }}" rel="stylesheet">
        {% endif %}
    </head>
    <body>
        <!-- MenÃº -->
{% if (app.request.get('_route') != 'just_codeactividades_homepage' and app.request.get('_route') != 'fos_user_registration_register' and app.request.get('_route') != 'fos_user_registration_confirmed') %}

    <div class="navbar navbar-inverse navbar-fixed-top" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="logo"><a class="navbar-brand" href="{{ 
        url('homepage') 
        }}"><img src="{{ asset('img/logoblanco.png') }}" alt="Logo blanco" /></a></div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ path('perfil') }}">My progress</a></li>
                    <li><a href="#">Settings</a></li>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED")%}
                    <li><a href="{{ path('fos_user_profile_show') }}">Logged as: {{app.user.username}}</a></li>
                    <li><a href="{{ path('fos_user_security_logout') }}">Log Out</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
    {% endif %}
    
    <div class="barraSuperior">
      <div class="barraSuperior-container global-nav">
        <div class="barraSuperior-containerInner u-cf">
          <span class="barraSuperior barraSuperiorItem--logo">
            <span class="Icon Icon--large Icon--bird"></span>
          </span>
        </div>
      </div>
    </div>
    
        {% block body %}{% endblock %}
        
        {% block javascripts %}{% endblock %}
        
    </body>
    
</html>