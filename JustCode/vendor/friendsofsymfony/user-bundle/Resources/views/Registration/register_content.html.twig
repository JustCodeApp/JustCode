{% trans_default_domain 'FOSUserBundle' %}

		<section id="s1">
			<img src="{{ asset('img/logogrande(blanco).png') }}">
			<div class="col-md-3"></div>
			{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register form-horizontal login'}}) }}
			
		 		<div class="form-group">
		 			<label for="username" class="control-label col-md-3 label-col">{{ 'Username'|trans }}</label>
		 			<div class="col-md-6">
			 			<div class="input-group">
			 				<div class="input-group-addon">
						 		<span class="glyphicon glyphicon-user"></span>
							</div>
							{{ form_widget(form.username) }}
						</div>
					</div>
				</div>
				<div class="form-group">
		 			<label for="username" class="control-label col-md-3 label-col">{{ 'Email'|trans }}</label>
		 			<div class="col-md-6">
			 			<div class="input-group">
			 				<div class="input-group-addon">
						 		<span class="glyphicon glyphicon-user"></span>
							</div>
							{{ form_widget(form.email) }}
						</div>
					</div>
				</div>
				<div class="form-group">
		 			<label for="username" class="control-label col-md-3 label-col">{{ 'Password'|trans }}</label>
		 			<div class="col-md-6">
			 			<div class="input-group">
			 				<div class="input-group-addon">
						 		<span class="glyphicon glyphicon-user"></span>
							</div>
							{{ form_widget(form.plainPassword.first) }}
						</div>
					</div>
				</div>
 		
				<div class="form-group">
		 			<label for="password" class="control-label col-md-3 label-col">{{ 'Confirm Password'|trans }}</label>
		 			<div class="col-md-6">
			 			<div class="input-group">
			 				<div class="input-group-addon">
						 		<span class="glyphicon glyphicon-asterisk"></span>
							</div>
							{{ form_widget(form.plainPassword.second) }}
						</div>
					</div>
				<div id="boton-contenedor" class="col-md-9">
			
				<input type="submit" value="{{ 'SING UP'|trans }}" />
			
				</div>	
				</div>
			
			{{ form_end(form) }}
		</section>
{% block javascripts %}
    <script>
        $(document).ready(function(){
            
             $("div.navbar").css("display","none");   
             $("body").css("margin-top","-90px");
             
             $("input").prop("class","form-control");
        });    
    </script>
{% endblock %}