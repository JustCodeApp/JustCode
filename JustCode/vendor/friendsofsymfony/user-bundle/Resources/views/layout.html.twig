{% extends 'base.html.twig' %}

{% block body %}

    {% if (app.request.get('_route') != 'just_codeactividades_homepage' and app.request.get('_route') != 'fos_user_registration_register' and app.request.get('_route') != 'fos_user_registration_confirmed') %}

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="logo"><a class="navbar-brand" href="{{ 
        url('homepage') 
        }}"><img src="{{ asset('img/logoblanco.png') }}" alt="Logo blanco" /></a></div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ path('perfil') }}">My progress</a></li>
                    <li><a href="#">Settings</a></li>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED")%}
                    <li><a href="{{ path('fos_user_profile_show') }}">Logged as: {{app.user.username}}</a></li>
                    <li><a href="{{ path('fos_user_security_logout') }}">Log Out</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
    {% endif %}
        
        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
        
{% endblock %}
